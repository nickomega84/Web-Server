# **************************************************************************** #
#                                CONFIGURACIÃ“N                                #
# **************************************************************************** #

NAME        := webserv
CXX         := c++
CXXFLAGS    := -Wall -Wextra -Werror -std=c++98 -MMD -MP  -Iinclude
#-pedantic
SRC_DIR     := src
OBJ_DIR     := obj
INC_DIR     := include
UPLOAD_DIR  := uploads

# **************************************************************************** #
#                                COLORES                                       #
# **************************************************************************** #

DEF_COLOR 	= \033[0;39m
GRAY 		= \033[0;90m
RED 		= \033[0;31m
GREEN 		= \033[0;92m
YELLOW 		= \033[0;93m
BLUE 		= \033[0;94m
MAGENTA 	= \033[0;95m
CYAN 		= \033[0;96m
WHITE 		= \033[0;97m
CLEAR 		= \033[0m

# **************************************************************************** #
#                                ARCHIVOS                                      #
# **************************************************************************** #

SRCS        := $(shell find $(SRC_DIR) -name "*.cpp")
OBJS        := $(SRCS:$(SRC_DIR)/%.cpp=$(OBJ_DIR)/%.o)
DEPS        := $(OBJS:.o=.d)
UPLOADS     := $(shell find $(UPLOAD_DIR) -name "*.txt")

# **************************************************************************** #
#                                  REGLAS                                       #
# **************************************************************************** #

all: $(NAME)

$(NAME): $(OBJS)
	@echo "$(CYAN)[ðŸ”§ Linking]$(CLEAR) $(NAME)"
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)
	@echo "$(GREEN)[âœ… Build complete]$(CLEAR)"

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp
	@mkdir -p $(dir $@)
	@echo "$(BLUE)[Compiling]$(CLEAR) $<"
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@rm -rf $(OBJ_DIR)
	@echo "$(YELLOW)[ðŸ§¹ Cleaned uploads]$(CLEAR)"
	@rm -rf $(UPLOADS)
	@echo "$(YELLOW)[ðŸ§¹ Cleaned object files]$(CLEAR)"

fclean: clean
	@rm -f $(NAME)
	@echo "$(RED)[ðŸ§¹ Cleaned executable]$(CLEAR)"

re: fclean all

deleteme:
	@echo "Creating temporal file: www/DELETEME.txt"
	@touch "www/DELETEME.txt"

-include $(DEPS)

.PHONY: all clean fclean re
